echo "üîç Validating commit message..."

# Get the commit message
commit_msg=$(cat "$1")

# Conventional commit pattern
pattern="^(feat|fix|docs|style|refactor|perf|test|chore|ci|build|revert)(\(.+\))?: .{1,50}"

if ! echo "$commit_msg" | grep -qE "$pattern"; then
  echo "‚ùå Invalid commit message format!"
  echo ""
  echo "Commit message must follow Conventional Commits:"
  echo "  <type>(<scope>): <subject>"
  echo ""
  echo "Types: feat, fix, docs, style, refactor, perf, test, chore, ci, build, revert"
  echo ""
  echo "Examples:"
  echo "  feat(clientes): add advanced filter functionality"
  echo "  fix(auth): resolve token expiration issue"
  echo "  docs(readme): update installation instructions"
  echo ""
  exit 1
fi

echo "‚úÖ Commit message format is valid"
