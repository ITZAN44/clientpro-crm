{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "next-devtools": {
      "type": "local",
      "command": ["npx", "-y", "next-devtools-mcp@latest"],
      "enabled": true
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"],
      "enabled": true
    },
    "pgsql": {
      "type": "local",
      "command": ["npx", "-y", "@benborla29/mcp-server-postgres"],
      "enabled": false,
      "environment": {
        "POSTGRES_CONNECTION_STRING": "postgresql://postgres:postgres@localhost:5432/clientpro_crm"
      }
      },
    "figma": {
      "type": "local",
      "command": ["cmd", "/c", "npx", "-y", "figma-developer-mcp", "--figma-api-key=${FIGMA_API_KEY}", "--stdio"],
      "enabled": false,
      "environment": {
        "FIGMA_API_KEY": ""
      }
    },
    "semgrep": {
      "type": "local",
      "command": ["npx", "mcp-server-semgrep"],
      "enabled": true
    }
  }
}
