{
  "mcpServers": {
    "pgsql": {
      "command": "npx",
      "args": ["-y", "@benborla/mcp-server-postgresql@latest"],
      "env": {
        "POSTGRES_HOST": "localhost",
        "POSTGRES_PORT": "5432",
        "POSTGRES_USER": "postgres",
        "POSTGRES_PASSWORD": "12345678",
        "POSTGRES_DB": "clientpro_crm"
      }
    },
    "next-devtools": {
      "command": "npx",
      "args": ["-y", "next-devtools-mcp@latest"]
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@context7/mcp-server"]
    },
    "testing": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-testing"]
    },
    "chrome-devtools": {
      "command": "npx",
      "args": ["-y", "chrome-devtools-mcp@latest"]
    },
    "semgrep": {
      "command": "npx",
      "args": ["mcp-server-semgrep"]
    }
  }
}